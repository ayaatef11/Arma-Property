@using ArmaProperty.Domain.Constants
@* <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script> *@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@* <script src="~/lib/bootbox.js/bootbox.min.js"></script> *@
@{
    if (!String.IsNullOrEmpty(Context.Session.GetString(ConstSession.TypeMsg)))
    {
        if (Context.Session.GetString(ConstSession.TypeMsg) == ConstSession.Success)
        {
            <script>
                Swal.fire({
                    title: '@Context.Session.GetString(ConstSession.Title)',
                    text: '@Html.Raw(Context.Session.GetString(ConstSession.BodyMsg))',
                    confirmButtonText: 'نعم',
                    icon: 'success'
                });
            </script>
        }
        else
        {
            <script>
                Swal.fire({
                    title: '@Context.Session.GetString(ConstSession.Title)',
                    text: '@Html.Raw(Context.Session.GetString(ConstSession.BodyMsg))',
                    confirmButtonText: 'نعم',
                    icon: 'error'
                });
            </script>

        }
        Context.Session.SetString(ConstSession.TypeMsg, "");
    }
}